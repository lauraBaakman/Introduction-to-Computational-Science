\newcommand{\drawFreeParticles}[2]{
      \foreach \x in {0,...,\numRowsCols}
          \foreach \y in {0,...,\numRowsCols} {
              \pgfmathtruncatemacro{\label}{\x - 3 *  \y + 7 - 1}
              \node [free]  (\x\y) at (
                {\gridSpacing*\x + (rand + 1) / 2 * (#2 - #1) + #1},
                {\gridSpacing*\y + (rand + 1) / 2 * (#2 - #1) + #1}
                ) 
                {\freeParticle{\label}};
          }   
}

